def number_of_flames_lit(statement1, statement2, statement3, statement4):

    # make a list of the statements
    statements = [statement1, statement2, statement3, statement4]

    # count how many times "Fire!" appears
    fire_count = statements.count("Fire!")

    # add the count to the initial flame
    total_flames = 1 + fire_count

    return total_flames
